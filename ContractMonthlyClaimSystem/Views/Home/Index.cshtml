@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>

<table class="table">
    <thead>
        <tr>
            <th>Lecturer Name</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Payment</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerId</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.TotalAmount</td>
                <td>@claim.Status</td>
                <td>
                    @if (claim.Status == "Pending")
                    {
                        <a asp-action="Approve" asp-route-id="@claim.ClaimId" class="btn btn-success">Approve</a>
                        <a asp-action="Reject" asp-route-id="@claim.ClaimId" class="btn btn-danger">Reject</a>
                    }
                    <a asp-action="Details" asp-route-id="@claim.ClaimId" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

